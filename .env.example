# Learnfinity Environment Configuration
# Copy this file to .env and fill in the values for your local development environment

# Supabase Configuration (already set in your project)
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_KEY=your_supabase_service_role_key
SUPABASE_URL=your_supabase_url

# Database Connection (for direct SQL execution)
SUPABASE_DB_HOST=db.your-project-ref.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your_database_password

# Groq API Configuration
# Get your API key from https://console.groq.com/
VITE_GROQ_API_KEY=your-groq-api-key-here
GROQ_API_KEY=your-groq-api-key-here  # Should be the same as VITE_GROQ_API_KEY

# Feature Flags
# Set to 'false' to disable specific features
ENABLE_LLM=true
ENABLE_BATCH_PROCESSING=true
ENABLE_NOTIFICATIONS=true

# Performance Settings
BATCH_SIZE=5
MAX_CONCURRENT_REQUESTS=3

# General Settings
APP_NAME=Learnfinity
DEBUG=true # Set to false in production

# Authentication Settings
VITE_DISABLE_SIGNUPS=false
VITE_ENABLE_EMAIL_CONFIRMATION=true

# Application Settings
VITE_APP_NAME=Learnfinity Spark
VITE_APP_URL=http://localhost:5173 