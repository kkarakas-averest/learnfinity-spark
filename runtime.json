{
  "routes": [
    {
      "src": "^/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    { "handle": "filesystem" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))", "dest": "/$1" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    { "src": "dist/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.{ts,js}", "use": "@vercel/node" }
  ]
} 