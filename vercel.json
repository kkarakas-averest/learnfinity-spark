{
  "version": 2,
  "buildCommand": "pnpm run build",
  "devCommand": "pnpm run dev",
  "framework": "vite",
  "installCommand": "pnpm install",
  "outputDirectory": "dist",
  "github": {
    "enabled": true,
    "silent": false
  },
  "regions": ["sfo1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/hr/courses/[courseId]/enrollment.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/hr/employee-courses.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/hr/employee-goals.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/hr/employees.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/chat/conversation.ts": {
      "memory": 2048,
      "maxDuration": 60
    },
    "api/hr/positions-with-requirement-counts.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/skills/position-requirements.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/skills/position-requirements/apply-suggestions.ts": {
      "memory": 1024,
      "maxDuration": 15
    },
    "api/skills/taxonomy-search.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/skills/gap-analysis.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/skills/course-generation.ts": {
      "memory": 2048,
      "maxDuration": 60
    },
    "api/ai/suggest-skills.ts": {
      "memory": 1024,
      "maxDuration": 15
    },
    "api/ai/regenerate-content.ts": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/course-generation/generate.ts": {
      "memory": 3008,
      "maxDuration": 300
    },
    "api/profile/set-preferences.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/sentry": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "VITE_SUPABASE_URL": "${VITE_SUPABASE_URL}",
    "VITE_SUPABASE_ANON_KEY": "${VITE_SUPABASE_ANON_KEY}",
    "VITE_SUPABASE_SERVICE_KEY": "${VITE_SUPABASE_SERVICE_KEY}",
    "SUPABASE_URL": "${VITE_SUPABASE_URL}",
    "SUPABASE_ANON_KEY": "${VITE_SUPABASE_ANON_KEY}",
    "SUPABASE_SERVICE_KEY": "${VITE_SUPABASE_SERVICE_KEY}",
    "NEXT_PUBLIC_SUPABASE_URL": "${VITE_SUPABASE_URL}",
    "SUPABASE_SERVICE_ROLE_KEY": "${VITE_SUPABASE_SERVICE_KEY}",
    "GROQ_API_KEY": "${GROQ_API_KEY}",
    "NODE_ENV": "production",
    "VERCEL_DEPLOYMENT": "true",
    "DEPLOYMENT_TIMESTAMP": "2025-04-21T10-15-03-825Z"
  }
}